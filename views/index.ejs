          <div class="header nlogo">Nzxitone</div>
        <h5 class="p-3">Online Users</h5>
        <ul class="online-users">
          <% if (users && users.length > 0) { %> <!-- Check if 'users' exists -->
            <% users.forEach(user => { %>
              <li class="text-center">
                <img src="/e.jpg" alt="User">
                <div> 
                  <div><%= user.name %></div>
                  <div style="font-size:12px"><%= user.email %></div>
